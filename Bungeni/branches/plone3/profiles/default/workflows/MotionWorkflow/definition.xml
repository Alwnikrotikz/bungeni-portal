<?xml version="1.0"?>
<dc-workflow workflow_id="MotionWorkflow"
             title="MotionWorkflow"
             state_variable="review_state"
             initial_state="draft">
 <state state_id="accepted" 
        title="accepted">
 </state>
 <state state_id="admissable" 
        title="admissable">
  <exit-transition transition_id="schedule"/>
 </state>
 <state state_id="draft" 
        title="draft">
  <exit-transition transition_id="submit"/>
 </state>
 <state state_id="moved" 
        title="moved">
  <exit-transition transition_id="accept"/>
  <exit-transition transition_id="reject"/>
 </state>
 <state state_id="rejected" 
        title="rejected">
 </state>
 <state state_id="scheduled" 
        title="scheduled">
  <exit-transition transition_id="move"/>
 </state>
 <state state_id="submitted" 
        title="submitted">
  <exit-transition transition_id="admit"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="amend"/>
 </state>
 <transition transition_id="accept" 
             title="accept"
             new_state="accepted"
             trigger="USER" 
             before_script="" 
             after_script="">
  <action url="" category="workflow">accept</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="admit" 
             title="admit"
             new_state="admissable"
             trigger="USER" 
             before_script="" 
             after_script="">
  <action url="" category="workflow">admit</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="amend" 
             title="amend"
             new_state="draft"
             trigger="USER" 
             before_script="" 
             after_script="">
  <action url="" category="workflow">amend</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="move" 
             title="move"
             new_state="moved"
             trigger="USER" 
             before_script="" 
             after_script="">
  <action url="" category="workflow">move</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="reject" 
             title="reject"
             new_state="rejected"
             trigger="USER" 
             before_script="" 
             after_script="">
  <action url="" category="workflow">reject</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="schedule" 
             title="schedule"
             new_state="scheduled"
             trigger="USER" 
             before_script="" 
             after_script="">
  <action url="" category="workflow">schedule</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="submit" 
             title="submit"
             new_state="submitted"
             trigger="USER" 
             before_script="" 
             after_script="">
  <action url="" category="workflow">submit</action>
  <guard>
  </guard>
 </transition>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
