<toolbar>
    <root lang="en" title="Editor Actions" visible="true" >
        <actionGroup name="blockActions" title="Block Actions" visible="true">
            <blockAction name="Root" title="Create Root Section" visible="true" condition="sectionNotExists:bill" target="generalAction.createRootSection" />
            <blockAction name="Preface" title="Preface" tooltip="Use these actions to create and manage the Preface" target="null" visible="true" condition="none" >
                <action name="Preface.selection" tooltip="Select some text in the document to mark it up as a MastHead." title="From Selection"  target="null" visible="true" condition="sectionNotExists:preface :and: textSelected:true :and: cursorInSection:bill" showChildren="true" >
                    <subaction name="Preface.selection" tooltip="Select some text to mark it up as a Preface" title="Define" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBillPrefaceSection.section_creation" visible="true" condition="cursorInSection:bill :and: sectionNotExists:preface :and: textSelected:true" />
                </action>
            </blockAction>
            <blockAction name="Article" tooltip="Create a Article Section" title="Article" target="null" visible="true" condition="none" >
                <action name="Article.selection" tooltip="Articles can be created as top-level containers in a document" title="From Selection"  target="null" visible="true" condition="cursorInSection:bill :and: textSelected:true" showChildren="true" >
                    <subaction name="Article.selection" title="Define" tooltip="Select some text to mark it up as a Article" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBillArticleSection.section_creation" visible="true" condition="cursorInSection:bill :and: textSelected:true" />
                    <subaction name="Article.selection.title" title="Markup title" tooltip="Select some text to mark it up as a  Article title" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBillArticleSection.apply_numbered_heading:article_title" visible="true" condition="cursorInSection:article([0-9]*) :and: textSelected:true :and: !sectionHasChildType:NumberedContainer" />
                </action>
            </blockAction>
            <blockAction name="Clause" tooltip="Create a Clause" title="Clause" target="null" visible="true" condition="none" >
                <action name="Clause.selection" tooltip="Define a Clause" title="From Selection"  target="null" visible="true" condition="cursorInSection:article([0-9]*) :and: textSelected:true" showChildren="true" >
                    <subaction name="Clause.selection.create" title="Define" tooltip="Clause can created inside articles"  mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBillClauseSection.section_creation" visible="true"  condition="cursorInSection:article([0-9]*) :and: textSelected:true" />
                    <subaction name="Clause.selection.title" title="Markup title" tooltip="Select some text to mark it up as a Clause"  mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBillClauseSection.apply_numbered_heading:clause_title" visible="true"  condition="cursorInSection:clause([0-9]*) :and: textSelected:true :and: !sectionHasChildType:NumberedContainer" />
                </action>
            </blockAction>
            <blockAction name="Section" tooltip="Create a Section" title="Section" target="null" visible="true" condition="none" >
                <action name="Section.selection" tooltip="" title="From Selection"  target="null" visible="true" condition="cursorInSection:clause([0-9]*) :and: textSelected:true" showChildren="true" >
                    <subaction name="Section.selection.create" title="Define" tooltip="Section can be created as a main container"  mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBillSectionSection.section_creation" visible="true"  condition="cursorInSection:clause([0-9]*) :and: textSelected:true" />
                    <subaction name="Section.selection.title" title="Markup title" tooltip="Select some text and mark it up as a heading"  mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBillSectionSection.apply_numbered_heading:section_title" visible="true"  condition="cursorInSection:section([0-9]*) :and: textSelected:true :and: !sectionHasChildType:NumberedContainer" />
                </action>
            </blockAction>
            <blockAction name="Part" tooltip="Create a Part Section" title="Part" target="null" visible="true" condition="none" >
                <action name="Part.selection" tooltip="" title="From Selection"  target="null" visible="true" condition="cursorInSection:part([0-9]*) :and: textSelected:true" showChildren="true" >
                    <subaction name="Part.selection.create" title="Define" tooltip="Part can be created inside Section"  mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBillPartSection.section_creation" visible="true"  condition="cursorInSection:section([0-9]*) :and: textSelected:true" />
                    <subaction name="Part.selection.title" title="Markup title" tooltip="Select some text to mark it up as a Part"  mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBillPartSection.apply_numbered_heading:part_title" visible="true"  condition="cursorInSection:part([0-9]*) :and: textSelected:true :and: !sectionHasChildType:NumberedContainer" />
                </action>
            </blockAction>
            
        </actionGroup>
    </root>
</toolbar>
