      metal:use-macro="context/@@standard_macros/page">

  <div metal:fill-slot="body" i18n:domain="bungeni">

      <h2 i18n:translate=""> Search </h2>
      <div metal:use-macro="context/@@standard_macros/form">
      </div>
      
      
      <h2 i18n:translate="">Results </h2>
      
