<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"           
           i18n_domain="bungeni">

  <!-- TimeZone Definition -->
  <adapter factory=".tz.tzinfo" />

  <!-- Site Skin Definition -->
  <include file="skin.zcml"/>  
  
  <!-- Site Menus Definition -->
  <include file="menu.zcml"/>

  <!-- Site Portlets -->
  <include package=".portlets" />
  
  <!-- Include Auditing UI-->
  <include file="audit.zcml" />

  <!-- Include Versioning UI -->
  <include file="version.zcml" />
  
  <!-- Include Workflow UI -->
  <include file="workflow.zcml" />
  
  <!-- Application UI -->
  <browser:page
     for="bungeni.core.interfaces.IBungeniApplication"
     permission="zope.View"
     name="index"
     template="templates/app-index.pt"
     />

  <browser:defaultView
     for="bungeni.core.interfaces.IBungeniApplication"
     name="index"
     />

  <!-- Content Search Form -->
  <browser:page
    for="bungeni.core.interfaces.IBungeniApplication"
    permission="zope.View"
    name="search"
    class=".search.Search"
    />

  <!-- Similar Content -->
  <browser:page
    for="bungeni.core.interfaces.IBungeniContent"
    permission="zope.View"
    name="similar"
    class=".search.Similar"
    />
    
  <!-- Setup Access to Browser Resources on the Application -->
  <browser:page
    name=""
    for="bungeni.core.interfaces.IBungeniApplication"
    class="zope.app.publisher.browser.resources.Resources"
    permission="zope.Public"
    allowed_interface="zope.publisher.interfaces.browser.IBrowserPublisher"
    />

  <!-- Login UI -->
    <browser:page
     for="bungeni.core.interfaces.IBungeniApplication"
     permission="zope.Public"
     name="signup"
     class=".login.SignUp"
     />
     
  <browser:page
     for="bungeni.core.interfaces.IBungeniApplication"
     permission="zope.Public"
     name="login"
     class=".login.Login"
     />
     
   <browser:resourceDirectory
    name="dhtmlgoodies_calendar"
    directory="calendar/dhtmlgoodies_calendar"  
    />
       
  <browser:resource
    name="dhtmlgoodies_calendar.js"
    file="calendar/dhtmlgoodies_calendar/dhtmlgoodies_calendar.js"
    />
    <browser:resource
    name="dhtmlgoodies_calendar.css"
    file="calendar/dhtmlgoodies_calendar/dhtmlgoodies_calendar.css"
    />
    
  <browser:resourceDirectory
    name="images"
    directory="calendar/images"  
    />
    
     
</configure>
