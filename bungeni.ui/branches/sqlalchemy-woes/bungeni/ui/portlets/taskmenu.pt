<dl class="portlet"
    tal:define="items view/items"
    tal:condition="view/available"
    i18n:domain="bungeni">
  
  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    <span class="tile" i18n:translate="">Tasks</span>
    <span class="portletTopRight"></span>
  </dt>

  <tal:items repeat="item items">

    <dd tal:define="odd repeat/item/odd"
        tal:attributes="class python: odd and 'portletItem odd' or 'portletItem even'">
      <a tal:attributes="href item/action;
                         title item/description"
         tal:content="item/title" />
    </dd>
  </tal:items>
  
</dl>  

